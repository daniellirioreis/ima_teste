  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Placa</th>
        <th  width="10%">Modelo</th>
				<th>Descrição</th>
      </tr>
    </thead>
    <tbody>
      <% if @vehicles.any? %>
        <% @vehicles.each do |v| %>
          <tr>
            <td align='center'>
							<%= v.license_plate%>
						</td>
						<td>
							<%= v.type_vehicle %>
						</td>
						<td>
							<%= v.description %>
						</td>
          </tr>
        <% end %>
      <% else %>
      <tr>
        <td colspan='4'>Nenhum registro foi encontrado.</td>
      </tr>
      <% end %>
    </tbody>
  </table>

