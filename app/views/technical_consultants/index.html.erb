  <h3>Listagem de Consultores Técnicos</h3>
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Nome</th>
        <th  width="10%">Código</th>
        <th  width="10%">Ação</th>
      </tr>
    </thead>
    <tbody>
      <% if @technical_consultants.any? %>
        <% @technical_consultants.each do |tc| %>
          <tr>
            <td align='center'>
							<%= tc %>
						</td>
						<td>
							<%= tc.cod %>
						</td>
						<td>
							 <div class="btn-group">
                <%= link_to "Editar", edit_technical_consultant_path(tc), :class => "btn btn-primary", :title => "Editar #{tc}" %>
                <%= link_to 'Deletar', tc, method: :delete, data: { confirm: 'Confirma exclusão?'}, :class => "btn btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      <% else %>
      <tr>
        <td colspan='4'>Nenhum registro foi encontrado.</td>
      </tr>
      <% end %>
    </tbody>
  </table>
<p>
  <%= link_to 'Novo Consultor Técnico', new_technical_consultant_path, :class => "btn" %>
</p>

