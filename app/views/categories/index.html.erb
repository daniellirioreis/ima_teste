<h3>Categorias</h3>
<table class="table table-striped table-hover table-bordered">
  <colgroup>
    <col>
    <col width="160">
  </colgroup>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ação</th>
    </tr>
  </thead>
  <tbody>
    <% if @categories.any? %>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category %></td>
          <td align='center'>
            <div class="btn-group">
              <%= link_to "Editar", edit_category_path(category), :class => "btn btn-primary", :title => "Editar #{category}" %>
              <%= link_to 'Deletar', category, method: :delete, data: { confirm: 'Confirma exclusão?'}, :class => "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
    <tr>
      <td colspan='2'>Nenhum registro foi encontrado.</td>
    </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to 'Nova Categoria', new_category_path, :class => "btn" %>
</p>