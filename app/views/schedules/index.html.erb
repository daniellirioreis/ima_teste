<h3>Agendamentos</h3>

 <table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Data</th>
      <th>Hora</th>
      <th>Veículo</th>
      <th>Consultor Técnico</th>
      <th>Descrição do serviço</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td>
	<%= schedule.date_schedule.try(:strftime, '%d/%m/%y') %></td>
        <td><%= schedule.hour_schedule.try(:strftime, '%H:%M') %></td>

        <td><%= schedule.vehicle %></td>
        <td><%= schedule.technical_consultant %></td>
        <td><%= schedule.description_service %></td>
        <td>
							 <div class="btn-group">
                <%= link_to "Editar", edit_schedule_path(schedule), :class => "btn btn-primary", :title => "Editar #{schedule}" %>
                <%= link_to 'Deletar', schedule, method: :delete, data: { confirm: 'Confirma exclusão?'}, :class => "btn btn-danger" %>
              </div>

				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Agendamento', new_schedule_path, class: :btn %>
