<%= simple_form_for(@product) do |f| %>
<div class="row-fluid">
  <div class="span10">
    <div class="span10"><%= f.input :name, input_html: { class: 'span10' } %></div>
  </div>
</div>
<div class="row-fluid">
  <div class="span3">
    <%= f.input :category_id, collection: Category.all, input_html: { class: 'span12'} %>
  </div>
  <div class="span3">
    <%= f.input :status %>
  </div>

</div>
<div class="form-actions">
  <%= f.button :submit, :class => "btn btn-success" %>
  <%= link_to 'Voltar', products_path, :class => "btn"  %>
</div>
<% end %>
