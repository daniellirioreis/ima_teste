  <h3>Listagem de Veículos</h3>
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Placa</th>
        <th  width="10%">Modelo</th>
				<th>Descrição</th>
				<th>Cliente</th>
        <th  width="10%">Ação</th>
      </tr>
    </thead>
    <tbody>
      <% if @vehicles.any? %>
        <% @vehicles.each do |v| %>
          <tr>
            <td align='center'>
							<%= v.license_plate %>
						</td>
						<td>
							<%= v.type_vehicle %>
						</td>
						<td>
							<%= v.description %>
						</td>
						<td><%= v.client%></td>
						<td>
							 <div class="btn-group">
                <%= link_to "Editar", edit_vehicle_path(v), :class => "btn btn-primary", :title => "Editar #{v}" %>
                <%= link_to 'Deletar', v, method: :delete, data: { confirm: 'Confirma exclusão?'}, :class => "btn btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      <% else %>
      <tr>
        <td colspan='4'>Nenhum registro foi encontrado.</td>
      </tr>
      <% end %>
    </tbody>
  </table>
<p>
  <%= link_to 'Novo Veículo', new_vehicle_path, :class => "btn" %>
</p>

